<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.groot.gowl">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_owl"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_owl_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gowl"

        >

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SerialActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name=".Activity.SelectActivity_Fiml"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name=".Exoplayer.ExoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name=".Activity.SelectActivity_Serials"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity android:name=".Activity.MultFilmActivity" />
        <activity android:name=".Activity.ActivityOpenBrowser">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="uakino.club"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.SearchActivity"/>
        <activity android:name=".Exoplayer.ExoArrays" android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"/>
        <activity android:name=".Activity.ActivityOpenUrl"/>
    </application>

</manifest>